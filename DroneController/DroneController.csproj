<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="icon\layers.png" />
    <None Remove="icon\menu.png" />
    <None Remove="icon\radio.png" />
    <None Remove="icon\rss.png" />
    <None Remove="img\alert-circle.png" />
    <None Remove="img\alert-triangle.png" />
    <None Remove="img\circle.png" />
    <None Remove="img\droneCamOutlines.png" />
    <None Remove="img\grid.png" />
    <None Remove="img\slash.png" />
    <None Remove="img\square.png" />
    <None Remove="img\x.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Emgu.CV" Version="4.9.0.5494" />
    <PackageReference Include="OpenCvSharp4" Version="4.10.0.20241108" />
    <PackageReference Include="OpenCvSharp4.runtime.win" Version="4.10.0.20241108" />
    <PackageReference Include="OpenCvSharp4.WpfExtensions" Version="4.10.0.20241108" />
    <PackageReference Include="SharpDX" Version="4.2.0" />
    <PackageReference Include="SharpDX.DirectInput" Version="4.2.0" />
    <PackageReference Include="System.Device.Gpio" Version="3.2.0" />
    <PackageReference Include="System.Drawing.Common" Version="9.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="icon\layers.png" />
    <Resource Include="icon\menu.png" />
    <Resource Include="icon\radio.png" />
    <Resource Include="icon\rss.png" />
    <Resource Include="img\alert-circle.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="img\alert-triangle.png" />
    <Resource Include="img\circle.png" />
    <Resource Include="img\droneCamOutlines.png" />
    <Resource Include="img\grid.png" />
    <Resource Include="img\slash.png" />
    <Resource Include="img\square.png" />
    <Resource Include="img\x.png" />
  </ItemGroup>

</Project>
